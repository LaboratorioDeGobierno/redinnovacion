- load i18n static

.nav-tabs-inverse-container.hidden-xs.green-bg-2
  .container
    .row
      .col-sm-6
        ul.nav.nav-tabs.nav-tabs-inverse
          li(class="{% if active_tab == 'cases' %}active{% endif %}")
            a(href="{% url 'case_list' %}")
              | CASOS
      if search_form
        .col-sm-3
        .col-sm-3  
          form(
            action="{% url 'case_search' %}",
            method="GET")
            .input-group
              input.form-control(
                type="text", name="q", value="{{ q|default:'' }}",
                placeholder="Buscar"
              )
              .input-group-addon.input-group-button
                button.btn.btn-sm.btn-link(type="submit")
                  i.fa.fa-2x.fa-search        
